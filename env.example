# =============================================================================
# CIVICOS ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret - MUST be a strong, random string in production
SESSION_SECRET=your-super-secret-jwt-key-here-change-this-in-production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/civicos_db

# Database SSL configuration
NODE_TLS_REJECT_UNAUTHORIZED=1

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server port
PORT=3001

# Node environment
NODE_ENV=development

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for CORS
CORS_ORIGIN=https://civicos.ca

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Frontend base URL
FRONTEND_BASE_URL=https://civicos.ca

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================
# OpenAI API Key (optional - for AI features)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key (optional - for Claude features)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Ollama URL (optional - for local AI)
OLLAMA_URL=http://localhost:11434

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP configuration for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=5242880

# Allowed file types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# Rate limiting settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_AI_FEATURES=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_FILE_UPLOADS=true
ENABLE_RATE_LIMITING=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development-specific settings
ENABLE_DEBUG_LOGGING=false
ENABLE_HOT_RELOAD=true
ENABLE_MOCK_DATA=true 